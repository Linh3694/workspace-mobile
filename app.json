{
  "expo": {
    "name": "Wis",
    "slug": "workspace",
    "version": "1.5.0",
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./src/assets/notifications/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./src/assets/sound/ticket_create.wav"
          ]
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Ứng dụng cần sử dụng FaceID để xác thực đăng nhập an toàn"
        }
      ],
      "expo-secure-store",
      "expo-apple-authentication",
      [
        "expo-image-picker",
        {
          "photosPermission": "Ứng dụng cần quyền truy cập thư viện ảnh để đính kèm ảnh vào ticket hỗ trợ và cập nhật avatar.",
          "cameraPermission": "Ứng dụng cần quyền truy cập camera để chụp ảnh."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "enable16KBPageSize": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "ndkVersion": "27.0.12077973"
          }
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.wellspring.workspace",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "Ứng dụng cần quyền truy cập camera để chụp ảnh và gửi trong tin nhắn",
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần quyền truy cập thư viện ảnh và video để gửi media trong tin nhắn",
        "NSMicrophoneUsageDescription": "Ứng dụng cần quyền truy cập microphone để ghi âm",
        "NSFaceIDUsageDescription": "Ứng dụng cần sử dụng FaceID để xác thực đăng nhập an toàn",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#FFFCF5"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.hailinh.n23.workspace",
      "permissions": [
        "NOTIFICATIONS",
        "VIBRATE",
        "CAMERA"
      ]
    },
    "scheme": "staffportal",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "extra": {
      "azureClientId": "78145f50-d9b3-4b45-9b0c-4cd1510941bf",
      "azureTenantId": "653b7f37-392c-416b-b3f0-34859ed6d6eb",
      "redirectUri": "staffportal://auth",
      "eas": {
        "projectId": "f6365a6d-3c57-4b54-aaa8-119f05e3698e"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/f6365a6d-3c57-4b54-aaa8-119f05e3698e"
    }
  }
}
